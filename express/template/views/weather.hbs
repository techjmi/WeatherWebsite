     <link rel="stylesheet" href="css/error.css">
      <link rel="stylesheet" href="css/weather.css">

  </head>
  <body>
         {{>navbar}}
   
    <div class="weather-container">
    <div class="search-box">
      <input type="text" placeholder="Enter city" id="cityInput">
      <input type="submit" value="Search" id="searchBtn" >
    </div>
    <form class="result-form ">
      <div class="top_layer">
        <p id="day">Sunday</p>
         <p id="date">13 OCT</p>
      </div>
    <div class="main_layer">
      <p id="City_Name"> Your Output Will be here</p>
    </div>
   <div class="main_data">
    <p id="temp"><span>0</span><sup>o</sup>C</p>
       <p id="temp_status"><i class="fas fa-cloud"></i>
</p>
</div>

   
        
    </form>
  </div>
{{>footer}}

